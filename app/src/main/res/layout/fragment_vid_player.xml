<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/video_player_vid_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/video_player_details"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ProgressBar
            android:id="@+id/video_player_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/video_view"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/video_view"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/video_player_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/video_player_vid_holder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/video_player_comments"
        android:layout_marginStart="@dimen/layout_padding_left"
        android:layout_marginEnd="@dimen/layout_padding_right">

        <TextView
            android:id="@+id/video_stream_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_title"
            android:textSize="20sp"
            style="@style/video_player_title"
            android:layout_marginStart="@dimen/video_row_title_margin"
            android:layout_marginTop="@dimen/video_row_title_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/video_stream_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_description"
            android:textSize="15sp"
            style="@style/video_player_description"
            android:layout_marginStart="@dimen/video_row_title_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_stream_title"
            />
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/video_player_comments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/video_player_details"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_comments_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            tools:listitem="@layout/row_video_comment_list_item"
            android:paddingBottom="@dimen/recycler_row_bottom"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_player_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/comment_list_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/video_player_comments"
            app:layout_constraintTop_toTopOf="@+id/video_player_comments"
            android:visibility="gone"
            />

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
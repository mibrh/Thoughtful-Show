<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/recycler_row_top"
    android:paddingBottom="@dimen/recycler_row_bottom"
    android:layout_marginStart="@dimen/recycler_row_start"
    android:layout_marginEnd="@dimen/recycler_row_end"
    tools:ignore="MissingPrefix"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/recyclerCard"
    >

    <ImageView
        android:id="@+id/comment_user_image"
        android:layout_margin="@dimen/image_padding_top"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/comment_user_name"
        style="@style/comment_list_username"
        android:layout_margin="@dimen/video_row_title_margin"
        app:layout_constraintLeft_toRightOf="@id/comment_user_image"
        app:layout_constraintTop_toTopOf="@id/comment_user_image"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/comment_text"
        style="@style/comment_list_text"
        android:layout_marginStart="@dimen/video_row_title_margin"
        android:layout_marginEnd="@dimen/video_row_title_margin"
        android:layout_marginBottom="@dimen/video_row_title_margin"
        app:layout_constraintLeft_toRightOf="@id/comment_user_image"
        app:layout_constraintTop_toBottomOf="@id/comment_user_name"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>

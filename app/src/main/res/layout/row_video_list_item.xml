<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recycler_row_top"
        android:layout_marginStart="@dimen/recycler_row_start"
        android:layout_marginEnd="@dimen/recycler_row_end"
        >

        <ImageView
            android:id="@+id/row_video_thumbnail"
            android:layout_width="@dimen/recycler_image_width"
            android:layout_height="@dimen/recycler_image_height"
            app:srcCompat="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/row_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/text_padding_left"
            android:layout_marginEnd="@dimen/text_padding_right"

            android:text="@string/default_title"

            app:layout_constraintTop_toTopOf="@+id/row_video_thumbnail"
            app:layout_constraintLeft_toRightOf="@id/row_video_thumbnail"

            style="@style/TextBold"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/row_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/text_padding_left"
            android:layout_marginEnd="@dimen/text_padding_right"

            android:text="@string/default_duration"

            app:layout_constraintLeft_toRightOf="@id/row_video_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/row_video_title"

            style="@style/TextRegular"
            android:textColor="@color/colorRed"
            />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Thoughtful show theme -->
    <style name="ThoughtfulTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/thoughtfulPrimary</item>
        <item name="colorPrimaryDark">@color/thoughtfulPrimaryDark</item>
        <item name="colorAccent">@color/thoughtfulAccent</item>
    </style>

    <!-- Bold text -->
    <style name="TextBold" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Regular text -->
    <style name="TextRegular" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Video List Row Title-->
    <style name="video_list_row_title" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">@string/font_main_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Video Player -->
    <style name="video_player_title" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/default_title</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">@string/font_main_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="video_player_description" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/default_description</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">@string/font_main_light</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Comment List Row Title extends Video Player -->
    <style name="comment_list_username" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">@string/font_main_medium</item>
        <item name="android:text">@string/default_user_name</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="comment_list_text" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">@string/font_main_light</item>
        <item name="android:text">@string/default_comment</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

</resources>
